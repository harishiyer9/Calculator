<CustButton@Button>:
    font_size: 24

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 7
    padding: 2
    spacing: 2

    BoxLayout:
        TextInput:
            id: entry
            font_size: 40
            multiline: False

    BoxLayout:
        spacing: 2
        CustButton:
            text: "sin"
            on_press: entry.text += self.text
        CustButton:
            text: "cos"
            on_press: entry.text += self.text
        CustButton:
            text: "tan"
            on_press: entry.text += self.text
        CustButton:
            text: "sinh"
            on_press: entry.text += self.text
        CustButton:
            text: "cosh"
            on_press: entry.text += self.text
        CustButton:
            text: "tanh"
            on_press: entry.text += self.text
    BoxLayout:
        spacing: 2
        CustButton:
            text: "ln"
            on_press: entry.text += self.text
        CustButton:
            text: "exp"
            on_press: entry.text += self.text
        CustButton:
            text: "E"
            on_press: entry.text += self.text
        CustButton:
            text: "PI"
            on_press: entry.text += self.text
        CustButton:
            text: "AC"
            background_color: (1,0.2,0.6,1) if self.state == 'normal' else (0,1,0,1)
            background_normal: ""
            on_press: entry.text = ""

    BoxLayout:
        spacing: 2
        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text
        CustButton:
            text: "+"
            on_press: entry.text += self.text
        CustButton:
            text: "-"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 2
        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text
        CustButton:
            text: "*"
            on_press: entry.text += self.text
        CustButton:
            text: "/"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 2
        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press:  entry.text += self.text
        CustButton:
            text: "Mod"
            on_press: entry.text += "%"
        CustButton:
            text: "^"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 2
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: "."
            on_press: entry.text += self.text
        CustButton:
            text: "("
            on_press: entry.text += self.text
        CustButton:
            text: ")"
            on_press: entry.text += self.text
        CustButton:
            text: "="
            on_press: calculator.calculate(entry.text)



